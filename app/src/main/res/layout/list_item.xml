<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView android:id="@+id/article_image"
        android:layout_width="104dp"
        android:layout_height="108dp"
        android:contentDescription="Article Image"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/article_image"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"  >

        <TextView android:id="@+id/article_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#8C919B"/>

        <TextView android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#000"/>

        <TextView android:id="@+id/article_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#000"/>

    </LinearLayout>

</RelativeLayout>